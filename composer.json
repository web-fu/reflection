{
  "name": "web-fu/reflection",
  "type": "library",
  "description": "Reflection API",
  "keywords": [
    "reflection"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Gabriele Manganello",
      "email": "info@web-fu.it",
      "homepage": "https://web-fu.it"
    }
  ],
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0 || ~8.3.0"
  },
  "autoload": {
    "psr-4": {
      "WebFu\\Reflection\\": "src/"
    },
    "files": [
      "src/reflection_type_names.php",
      "src/reflection_type_resolver.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WebFu\\Reflection\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "ext-mbstring": "*",
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.13",
    "phpstan/phpstan": "^1.9",
    "vimeo/psalm": "^5.4",
    "phpbench/phpbench": "^1.2",
    "infection/infection": "^0.26.16"
  },
  "scripts": {
    "ci:cs": "php -d memory_limit=-1 vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --allow-risky=yes -vvv --dry-run",
    "phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 php ./vendor/bin/php-cs-fixer fix --allow-risky=yes -vvv",
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=-1",
    "tests": "./vendor/bin/phpunit --coverage-text --color",
    "testquality": "@parallel infection",
    "infection": [
      "Composer\\Config::disableProcessTimeout",
      "./vendor/bin/infection --show-mutations -v"
    ],
    "ci": [
      "@autoload",
      "@parallel cs phpstan tests",
      "@parallel infection"
    ]
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
