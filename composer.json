{
  "name": "web-fu/reflection",
  "type": "library",
  "description": "Reflection API",
  "keywords": [
    "reflection", "static analysis"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Gabriele Manganello",
      "email": "info@web-fu.it",
      "homepage": "https://web-fu.it"
    }
  ],
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0 || ~8.3.0"
  },
  "autoload": {
    "psr-4": {
      "WebFu\\": "src/"
    },
    "files": [
      "src/Reflection/reflection_type_names.php",
      "src/Reflection/reflection_type_resolver.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WebFu\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "ext-mbstring": "*",
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.13",
    "phpstan/phpstan": "^1.9",
    "vimeo/psalm": "^5.4",
    "phpbench/phpbench": "^1.2",
    "infection/infection": "^0.26.16"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
